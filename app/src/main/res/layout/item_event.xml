<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingHorizontal="32dp"
    android:paddingVertical="16dp"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_event"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bali"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nama_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/abc_event"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_event"
        app:layout_constraintTop_toTopOf="@+id/img_event" />

    <TextView
        android:id="@+id/tv_tanggal_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="8dp"
        android:text="@string/tanggal"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_nama_event"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_event"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_event" />
</androidx.constraintlayout.widget.ConstraintLayout>